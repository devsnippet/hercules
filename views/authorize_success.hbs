{{> header}}
  <style type="text/css">
  .to-do {
    display: flex;
    flex-flow: row flow;
    justify-content: space-around;
    align-items: center;
  }
  h1.text-success {
    color: #3eb94e;
  }
  </style>
  <div class="container">
    <div class="jumbotron">
      <h1 class="text-success">恭喜！小程序授权完成</h1>
